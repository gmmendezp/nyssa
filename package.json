{
  "name": "nyssa",
  "version": "1.0.0",
  "description": "Application generator tool",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "standard --verbose | snazzy",
    "format": "prettier --single-quote --no-semi --write \"**/*.js\" && standard --fix",
    "precommit": "lint-staged"
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/gmmendezp/nyssa.git"
  },
  "homepage": "https://gitlab.com/gmmendezp/nyssa#README",
  "preferGlobal": true,
  "bin": {
    "nyssa": "./src/index.js",
    "nyssa-be": "./src/nyssa-be.js",
    "nyssa-fe": "./src/nyssa-fe.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --no-semi --write",
      "standard --fix",
      "git add"
    ]
  },
  "dependencies": {
    "commander": "^2.9.0",
    "generator-nyssa-be": "^1.0.0",
    "generator-nyssa-fe": "^1.0.0",
    "yeoman-environment": "^2.0.0"
  },
  "devDependencies": {
    "husky": "^0.13.4",
    "lint-staged": "^4.0.0",
    "prettier": "^1.4.4",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2"
  }
}
